{
  "version": "2.0.1",
  "npmClient": "pnpm",
  "useWorkspaces": true,
  "packages": [
    "packages/@scaffdog/*",
    "packages/*"
  ],
  "command": {
    "version": {
      "exact": true,
      "conventionalCommits": true
    },
    "publish": {
      "npmClient": "npm",
      "registry": "https://registry.npmjs.org/",
      "message": "chore: publish",
      "allowBranch": [
        "main",
        "canary"
      ]
    }
  }
}
