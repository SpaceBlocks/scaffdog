{
  "private": true,
  "packageManager": "pnpm@7.8.0",
  "scripts": {
    "build": "turbo run build",
    "postbuild": "lerna link",
    "typecheck": "turbo run typecheck",
    "clean": "pnpm clean:cache",
    "clean:all": "run-s clean:cache clean:deps",
    "clean:cache": "rimraf \".turbo\" \"**/.turbo\" \"packages/*/lib\" \"packages/@scaffdog/*/lib\"",
    "clean:deps": "rimraf \"packages/*/node_modules\" \"packages/@scaffdog/*/node_modules\" node_modules",
    "format": "run-s format:prettier format:script",
    "format:prettier": "prettier --write .",
    "format:script": "pnpm lint:script --fix",
    "lint": "run-p lint:*",
    "lint:prettier": "prettier --check .",
    "lint:script": "eslint . --ext \".js,.jsx,.cjs,.ts,.tsx\"",
    "release": "lerna publish from-package",
    "release:canary": "pnpm release --dist-tag canary",
    "scaffold": "pnpm -C packages/scaffdog scaffold",
    "test": "turbo run test",
    "linkall": "pnpm -r --no-bail exec npm link",
    "unlinkall": "pnpm -r --no-bail exec npm unlink",
    "versionup": "lerna version",
    "versionup:canary": "lerna version prerelease --preid canary",
    "versionup:major": "lerna version major",
    "versionup:major:canary": "pnpm versionup:major --preid canary",
    "versionup:minor": "lerna version minor",
    "versionup:minor:canary": "pnpm versionup:minor --preid canary",
    "versionup:patch": "lerna version patch",
    "versionup:patch:canary": "pnpm versionup:patch --preid canary",
    "versionup:cancel": "git tag --points-at @ | xargs -I{} git tag --delete {} && git reset --hard @^",
    "prepare": "husky install"
  },
  "lint-staged": {
    "*.{js,jsx,cjs,ts,tsx,css,md,yml,json}": [
      "prettier --write"
    ]
  },
  "pnpm": {
    "overrides": {
      "ansi-regex": "5.0.1",
      "trim-newlines": "3.0.1"
    }
  },
  "devDependencies": {
    "@commitlint/cli": "16.3.0",
    "@commitlint/config-conventional": "16.2.4",
    "@commitlint/config-lerna-scopes": "16.2.4",
    "@types/mock-fs": "4.13.1",
    "@types/node": "18.6.4",
    "@typescript-eslint/eslint-plugin": "5.32.0",
    "@typescript-eslint/parser": "5.32.0",
    "ava": "3.15.0",
    "eslint": "8.18.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-import": "2.26.0",
    "husky": "^8.0.0",
    "lerna": "4.0.0",
    "lint-staged": "12.5.0",
    "mock-fs": "5.1.2",
    "npm-run-all": "4.1.5",
    "prettier": "2.7.1",
    "prettier-plugin-packagejson": "2.2.18",
    "rimraf": "3.0.2",
    "ts-node": "10.8.1",
    "turbo": "^1.4.2",
    "typescript": "4.7.4",
    "unbuild": "^0.7.6",
    "vitest": "^0.18.0"
  }
}
