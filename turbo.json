{
  "$schema": "https://turborepo.org/schema.json",
  "baseBranch": "origin/canary",
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["lib/**"]
    },
    "test": {
      "dependsOn": ["build"],
      "outputs": ["src/**/*.snap"],
      "inputs": ["src/**/*.ts", "src/**/*.snap"]
    },
    "typecheck": {
      "cache": false,
      "dependsOn": ["build"]
    }
  },
  "globalDependencies": ["tsconfig.json"]
}
